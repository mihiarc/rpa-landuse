# Streamlit Secrets Configuration Example
# Copy this file to .streamlit/secrets.toml and update with your actual values
# DO NOT commit the actual secrets.toml file to version control!

[auth]
# Password hash for authentication (SHA256)
# Generate using: python -c "import hashlib; print(hashlib.sha256('your_password'.encode()).hexdigest())"
# Replace 'your_secure_password' with your actual password
password_hash = "replace_with_your_sha256_password_hash"

# Session timeout in hours (default: 8)
# Users will be logged out after this many hours of inactivity
timeout_hours = 8